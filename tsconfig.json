{
  "compilerOptions": {
    "target": "es2020",  // Target ES2020 JavaScript
    "module": "commonjs",  // CommonJS for Node.js
    "lib": ["es2020", "dom"],  // Include libraries for ES2020 and DOM
    "strict": true,  // Enable strict type checking
    "esModuleInterop": true,  // Enable interop between ES and CommonJS modules
    "skipLibCheck": true  // Skip checking libraries for performance
  }
}
